<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_fra_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_zoom_in"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_zoom1_selector" />

        <ImageView
            android:id="@+id/btn_zoom_out"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_zoom2_selector" />

        <ImageView
            android:id="@+id/btn_res"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_res_selector" />

        <ImageView
            android:id="@+id/btn_memory"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_memory2_selector" />

        <ImageView
            android:id="@+id/btn_compare"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_com1_selector" />

        <ImageView
            android:id="@+id/bt_pulse_width"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_pulshw_selector"
            android:visibility="gone" /><!--TDR波宽度屏蔽掉-->

        <ImageView
            android:id="@+id/wavePrevious"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_wavepre_selector" />

        <ImageView
            android:id="@+id/waveNext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_wavenext_selector" />

        <ImageView
            android:id="@+id/btn_zero"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_zero1_selector" />

        <ImageView
            android:id="@+id/btn_lead1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_lead_selector" />

        <ImageView
            android:id="@+id/btn_file1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_btnfile_selector" />

        <ImageView
            android:id="@+id/btn_update1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_update_selector" />

    </LinearLayout>

</RelativeLayout>