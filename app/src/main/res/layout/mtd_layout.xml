<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mtd_sidebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_tdr"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_tdr_mode_selector" />

        <ImageView
            android:id="@+id/btn_icm"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_icms_mode_selector" />

        <ImageView
            android:id="@+id/btn_icmc"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/bg_icmc_mode_selector" />

        <ImageView
            android:id="@+id/btn_sim"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_weight="1"
            android:src="@drawable/bg_mim_mode_selector" />

        <ImageView
            android:id="@+id/btn_decay"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_weight="1"
            android:src="@drawable/bg_icmd_mode_selector" />
    </LinearLayout>

</RelativeLayout>