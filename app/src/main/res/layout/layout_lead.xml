<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_cable_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_lead"
            android:textColor="@color/blue_4EDAFC"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="54dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cb_test_lead1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginBottom="0dp"
            android:background="@null"
            android:button="@drawable/bg_test_lead_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_cable_lengtn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/length"
            android:textColor="@color/blue_4EDAFC"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/et_pulse_length_id"
            android:layout_width="78dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center"
            android:inputType="number"
            android:minWidth="@dimen/dp_80"
            android:textColor="@color/blue_4EDAFC"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cable_vop_unit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mi"
            android:textColor="@color/blue_4EDAFC"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="84dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_cable_vop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vop"
            android:textColor="@color/blue_4EDAFC"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/et_pulse_vop_id"
            android:layout_width="68dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center"
            android:inputType="number"
            android:minWidth="@dimen/dp_80"
            android:textColor="@color/blue_4EDAFC"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_cable_vop_unit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mius"
            android:textColor="@color/blue_4EDAFC"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/tv_lead_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:gravity="center"
            android:src="@drawable/bg_save_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_lead_close"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_gravity="end"
            android:src="@drawable/bg_dialog_close" />
    </LinearLayout>
</LinearLayout>
